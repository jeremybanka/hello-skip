{
	"compilerOptions": {
		"esModuleInterop": true,
		"isolatedModules": true,
		"module": "Preserve",
		"moduleResolution": "bundler",
		"moduleDetection": "force",
		"noEmit": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"types": ["vitest/globals"],
		"verbatimModuleSyntax": true
	},
	"include": ["src/**/*.ts", "__tests__/**/*.ts", "*.config.ts"]
}
